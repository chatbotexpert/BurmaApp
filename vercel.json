{
  "version": 2,
  "builds": [
    {
      "src": "burma_news/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "1024mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "burma_news/wsgi.py"
    }
  ],
  "crons": [
    {
      "path": "/cron/scrape/",
      "schedule": "0 12 * * *"
    }
  ]
}